---
import Layout from "./Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={`${title} • FretNinja`}>
  <div class="flex min-h-screen flex-col bg-slate-950 text-white">
    <header class="sticky top-0 z-40 border-b border-white/5 bg-slate-950/95 backdrop-blur-sm">
      <nav class="mx-auto flex h-16 max-w-6xl items-center justify-between px-6">
        <a
          href="/"
          class="flex items-center gap-2 text-emerald-300 transition hover:text-emerald-200"
          aria-label="FretNinja home"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-6 w-6"
            aria-hidden="true"
          >
            <path d="M12 2L2 7l10 5 10-5-10-5z" />
            <path d="M2 17l10 5 10-5" />
            <path d="M2 12l10 5 10-5" />
          </svg>
          <span class="text-lg font-bold tracking-tight">FretNinja</span>
        </a>

        <div class="hidden items-center gap-1 md:flex">
          <a
            href="/quiz"
            class="rounded-lg px-4 py-2 text-sm font-medium text-slate-300 transition hover:bg-white/5 hover:text-white"
          >
            Quiz
          </a>
          <a
            href="/explorer"
            class="rounded-lg px-4 py-2 text-sm font-medium text-slate-300 transition hover:bg-white/5 hover:text-white"
          >
            Explorer
          </a>
          <a
            href="/dashboard"
            class="rounded-lg px-4 py-2 text-sm font-medium text-slate-300 transition hover:bg-white/5 hover:text-white"
          >
            Dashboard
          </a>
          <a
            href="/progress"
            class="rounded-lg px-4 py-2 text-sm font-medium text-slate-300 transition hover:bg-white/5 hover:text-white"
          >
            Progress
          </a>
        </div>

        <div class="flex items-center gap-3">
          <div id="user-menu-slot">
            <a
              href="/login"
              class="rounded-lg border border-white/10 bg-white/5 px-4 py-2 text-sm font-medium text-slate-300 transition hover:border-emerald-300/40 hover:text-white"
            >
              Sign in
            </a>
          </div>
          <button
            type="button"
            class="rounded-lg p-2 text-slate-400 transition hover:bg-white/5 hover:text-white md:hidden"
            aria-label="Open menu"
            id="mobile-menu-button"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
              aria-hidden="true"
            >
              <line x1="4" x2="20" y1="12" y2="12" />
              <line x1="4" x2="20" y1="6" y2="6" />
              <line x1="4" x2="20" y1="18" y2="18" />
            </svg>
          </button>
        </div>
      </nav>

      <div
        id="mobile-menu"
        class="hidden border-t border-white/5 bg-slate-950/95 px-6 py-4 md:hidden"
      >
        <div class="flex flex-col gap-1">
          <a
            href="/quiz"
            class="rounded-lg px-4 py-2.5 text-sm font-medium text-slate-300 transition hover:bg-white/5 hover:text-white"
          >
            Quiz
          </a>
          <a
            href="/explorer"
            class="rounded-lg px-4 py-2.5 text-sm font-medium text-slate-300 transition hover:bg-white/5 hover:text-white"
          >
            Explorer
          </a>
          <a
            href="/dashboard"
            class="rounded-lg px-4 py-2.5 text-sm font-medium text-slate-300 transition hover:bg-white/5 hover:text-white"
          >
            Dashboard
          </a>
          <a
            href="/progress"
            class="rounded-lg px-4 py-2.5 text-sm font-medium text-slate-300 transition hover:bg-white/5 hover:text-white"
          >
            Progress
          </a>
        </div>
      </div>
    </header>

    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-white/5 bg-slate-950/60">
      <div
        class="mx-auto flex max-w-6xl flex-col items-center justify-between gap-4 px-6 py-6 text-sm text-slate-400 md:flex-row"
      >
        <span>Built for guitarists learning the fretboard.</span>
        <div class="flex items-center gap-4">
          <a href="/settings" class="transition hover:text-slate-300">Settings</a>
          <a href="/achievements" class="transition hover:text-slate-300">Achievements</a>
          <span>© 2026 FretNinja</span>
        </div>
      </div>
    </footer>
  </div>
</Layout>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuButton?.addEventListener("click", () => {
    const isHidden = mobileMenu?.classList.contains("hidden");
    if (isHidden) {
      mobileMenu?.classList.remove("hidden");
    } else {
      mobileMenu?.classList.add("hidden");
    }
  });
</script>
