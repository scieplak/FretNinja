---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  badge?: string;
}

const { title, subtitle, description, badge } = Astro.props;
---

<Layout title={`${title} â€¢ FretNinja`}>
  <main id="main-content" class="flex min-h-screen items-center justify-center bg-slate-950 px-6 py-16 text-white">
    <div class="w-full max-w-md">
      <a
        href="/"
        class="mb-8 flex items-center justify-center gap-2 text-emerald-300 transition hover:text-emerald-200"
        aria-label="Back to FretNinja home"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-6 w-6"
          aria-hidden="true"
        >
          <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
          <path d="M2 17l10 5 10-5"></path>
          <path d="M2 12l10 5 10-5"></path>
        </svg>
        <span class="text-lg font-bold tracking-tight">FretNinja</span>
      </a>

      <div class="rounded-2xl border border-white/10 bg-white/5 p-8 shadow-2xl shadow-slate-900/50">
        <div class="space-y-2">
          {badge && <p class="text-xs font-semibold uppercase tracking-[0.3em] text-emerald-300">{badge}</p>}
          <h1 class="text-2xl font-semibold text-white">{subtitle || title}</h1>
          {description && <p class="text-sm text-slate-300">{description}</p>}
        </div>

        <div class="mt-8">
          <slot />
        </div>

        <slot name="footer" />
      </div>
    </div>
  </main>
</Layout>
