---
import Layout from "../layouts/Layout.astro";
import PasswordResetForm from "../components/auth/PasswordResetForm";
---

<Layout title="Reset Password â€¢ FretNinja">
  <main
    id="main-content"
    class="flex min-h-screen items-center justify-center bg-slate-950 px-6 py-16 text-white"
  >
    <div class="w-full max-w-md">
      <div class="rounded-2xl border border-white/10 bg-white/5 p-8 shadow-2xl shadow-slate-900/50">
        <div class="space-y-2">
          <p class="text-xs font-semibold uppercase tracking-[0.3em] text-emerald-300">Reset password</p>
          <h1 class="text-2xl font-semibold text-white">Get back into FretNinja</h1>
          <p class="text-sm text-slate-300">
            We'll email you a secure link to reset your password. Links expire after 24 hours.
          </p>
        </div>

        <div class="mt-8">
          <PasswordResetForm client:idle />
        </div>

        <p class="mt-6 text-center text-sm text-slate-400">
          Remembered your password?
          <a href="/login" class="ml-1 text-emerald-200 hover:text-emerald-100">Back to login</a>
        </p>
      </div>
    </div>
  </main>
</Layout>
