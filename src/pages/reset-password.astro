---
import AuthLayout from "../layouts/AuthLayout.astro";
import PasswordResetForm from "../components/auth/PasswordResetForm";
---

<AuthLayout
  title="Reset Password"
  badge="Reset password"
  subtitle="Get back into FretNinja"
  description="We'll email you a secure link to reset your password. Links expire after 24 hours."
>
  <PasswordResetForm client:idle />

  <p slot="footer" class="mt-6 text-center text-sm text-slate-400">
    Remembered your password?
    <a href="/login" class="ml-1 text-emerald-200 hover:text-emerald-100">Back to login</a>
  </p>
</AuthLayout>
