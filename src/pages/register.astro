---
import AuthLayout from "../layouts/AuthLayout.astro";
import RegisterForm from "../components/auth/RegisterForm";
---

<AuthLayout
  title="Register"
  badge="Create account"
  subtitle="Start your fretboard journey"
  description="Register now to save progress, unlock achievements, and track your learning streaks."
>
  <RegisterForm client:idle />

  <p slot="footer" class="mt-6 text-center text-sm text-slate-400">
    Already have an account?
    <a href="/login" class="ml-1 text-emerald-200 hover:text-emerald-100">Log in</a>
  </p>
</AuthLayout>
