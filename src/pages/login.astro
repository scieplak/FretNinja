---
import AuthLayout from "../layouts/AuthLayout.astro";
import LoginForm from "../components/auth/LoginForm";

// Get redirect parameter from URL query string
const redirectTo = Astro.url.searchParams.get("redirect") || undefined;
---

<AuthLayout
  title="Login"
  badge="Welcome back"
  subtitle="Sign in to continue"
  description="Pick up right where you left off with your latest practice."
>
  <LoginForm client:load redirectTo={redirectTo} />

  <p slot="footer" class="mt-6 text-center text-sm text-slate-400">
    New to FretNinja?
    <a href="/register" class="ml-1 text-emerald-200 hover:text-emerald-100">Create an account</a>
  </p>
</AuthLayout>
