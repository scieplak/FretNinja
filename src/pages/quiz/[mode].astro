---
import AppLayout from "../../layouts/AppLayout.astro";
import QuizActiveView from "../../components/quiz/QuizActiveView";

const { mode } = Astro.params;
const quizMode = (mode ?? "find-note") as "find-note" | "name-note" | "mark-chord" | "recognize-interval";
const user = Astro.locals.user;
---

<AppLayout title="Quiz">
  <div class="rotate-prompt bg-slate-950/95 text-white">
    <div class="rounded-2xl border border-emerald-400/40 bg-emerald-400/10 px-6 py-4 text-center">
      <p class="text-sm font-semibold text-emerald-100">Rotate your device</p>
      <p class="mt-2 text-xs text-slate-200">Landscape orientation works best for the fretboard.</p>
    </div>
  </div>
  <div class="px-6 py-12">
    <div class="mx-auto max-w-5xl">
      <QuizActiveView mode={quizMode} user={user} client:load />
    </div>
  </div>
</AppLayout>
