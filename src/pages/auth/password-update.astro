---
import AuthLayout from "../../layouts/AuthLayout.astro";
import PasswordResetForm from "../../components/auth/PasswordResetForm";
---

<AuthLayout
  title="Update Password"
  badge="Update password"
  subtitle="Set your new password"
  description="Choose a new password to secure your account and sign back in."
>
  <PasswordResetForm client:idle />

  <p slot="footer" class="mt-6 text-center text-sm text-slate-400">
    Back to
    <a href="/login" class="ml-1 text-emerald-200 hover:text-emerald-100">login</a>
  </p>
</AuthLayout>
